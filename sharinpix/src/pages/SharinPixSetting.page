<apex:page showHeader="true" sidebar="true" Controller="SharinPixSettingController">
	<apex:form >	
		<apex:pageBlock title="SharinPix setting">
			<apex:pageBlockButtons location="both">
				<apex:commandButton value="{!$Label.Save}" action="{!saveCredential}"/>
			</apex:pageBlockButtons>
			<apex:pageBlockSection title="SharinPix Api settings" columns="1" showHeader="true">
				<apex:pageMessages />
				<apex:inputField value="{!credential.Client_Id__c}" />
				<apex:inputField value="{!credential.Client_Secret__c}" />
				<apex:inputField value="{!credential.Endpoint_Url__c}" />
			</apex:pageBlockSection>
		</apex:pageBlock>
	</apex:form>	
</apex:page>