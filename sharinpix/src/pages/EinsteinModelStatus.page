<apex:page standardController="EinsteinModel__c" extensions="EinsteinModelStatusController" showHeader="false" standardStylesheets="false" sidebar="false" applyHtmlTag="false" applyBodyTag="false" docType="html-5.0">

<html xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
<head>
<apex:slds />

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script>

 $(document).ready(function(){
    $(window).on('message', function(e){
      data = e.originalEvent.data;
      switch (data.name) {
        case 'viewer-image-viewed':
          document.getElementById('statusIframe').contentWindow.postMessage({name: 'viewer-image-viewed', model_id: '{!recordId}', image_id: data.payload.image.public_id}, '*');
          break;
        case 'viewer-closed':
          document.getElementById('statusIframe').contentWindow.postMessage({name: 'viewer-closed'}, '*');
          break;
      };
    });
  });

</script>
</head>

<body>
  <iframe id="statusIframe" src="{!modelStatusUrl}" height="300px" width="100%" style="border: 0" sandbox="" />
  <div id="album">
    <iframe id="albumIframe" src="{!albumUrl}" height="520px" width="100%" style="border: 0" sandbox="" />
  </div>
</body>
</html>

</apex:page>